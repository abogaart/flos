{
  "name": "flos",
  "version": "0.1.0",
  "description": "General purpose lint framework",
  "repository": {
    "url": "https://github.com/abogaart/flos.git",
    "type": "git"
  },
  "bin": {
    "flos": "./bin/flos.js"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "author": "Arthur Bogaart <arthur.bogaart@bloomreach.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "debug": "^2.5.2",
    "globby": "^6.1.0",
    "ignore": "^3.2.0",
    "lodash.pick": "^4.4.0",
    "path-util": "^0.3.0",
    "shelljs": "^0.7.5"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.4",
    "babel-register": "^6.18.0",
    "codecov": "^3.6.5",
    "cross-env": "^3.1.3",
    "docdash": "^0.4.0",
    "jsdoc": "^3.4.3",
    "nyc": "^10.0.0",
    "require-all": "^2.1.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "build-watch": "babel -w src/ --out-dir lib/",
    "clean": "rimraf lib coverage docs .nyc_output",
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "xo",
    "preversion": "yarn test",
    "prepublish": "yarn run build",
    "test": "yarn run lint && yarn run build && yarn run test-only",
    "test-ci": "cross-env BABEL_ENV=test yarn run build && nyc --reporter=text-summary --reporter=lcov yarn run test-only",
    "test-only": "cross-env NODE_ENV=test ava"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "xo": {
    "space": true,
    "esnext": true
  }
}
