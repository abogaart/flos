{
  "name": "flos",
  "version": "0.1.0",
  "description": "General purpose lint framework",
  "repository": {
    "url": "https://github.com/abogaart/flos.git",
    "type": "git"
  },
  "bin": {
    "flos": "./bin/flos.js"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "author": "Arthur Bogaart <a.bogaart@onehippo.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "codecov": "^1.0.1",
    "cross-env": "^3.1.3",
    "eslint": "^3.11.1",
    "eslint-config-babel": "^3.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.28.2",
    "nyc": "^10.0.0",
    "require-all": "^2.0.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "build-watch": "babel -w src/ --out-dir lib/",
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "lint": "eslint src test",
    "preversion": "yarn test",
    "prepublish": "yarn run build",
    "test": "yarn run lint && yarn run build && yarn run test-only",
    "test-ci": "cross-env BABEL_ENV=test yarn run build && nyc --reporter=text-summary --reporter=lcov yarn run test-only",
    "test-only": "NODE_ENV=test ava"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "babel": "inherit"
  }
}
