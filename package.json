{
  "name": "flos",
  "version": "0.1.0",
  "description": "General purpose lint framework",
  "repository": {
    "url": "https://github.com/abogaart/flos.git",
    "type": "git"
  },
  "bin": {
    "flos": "./bin/flos.js"
  },
  "files": [
    "lib"
  ],
  "main": "lib/api.js",
  "author": "Arthur Bogaart <arthur.bogaart@bloomreach.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "2.3.0",
    "cosmiconfig": "4.0.0",
    "debug": "3.1.0",
    "globby": "7.1.1",
    "ignore": "3.3.7",
    "lodash.merge": "4.6.0",
    "lodash.pick": "4.4.0",
    "meow": "4.0.0",
    "path-util": "0.3.0",
    "shelljs": "0.8.1"
  },
  "devDependencies": {
    "ava": "0.25.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-istanbul": "4.1.5",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "codecov": "3.0.0",
    "cross-env": "5.1.3",
    "docdash": "0.4.0",
    "jsdoc": "3.5.5",
    "nyc": "11.4.1",
    "require-all": "2.2.0",
    "rimraf": "2.6.2",
    "sinon": "4.2.2",
    "strip-ansi": "4.0.0",
    "xo": "0.18.2"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "build-watch": "babel -w src/ --out-dir lib/",
    "clean": "rimraf lib coverage docs .nyc_output",
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "xo",
    "preversion": "yarn test",
    "prepublish": "yarn run build",
    "test": "yarn run lint && yarn run build && yarn run test-only",
    "test-ci": "cross-env BABEL_ENV=test yarn run build && nyc --reporter=text-summary --reporter=lcov yarn run test-only",
    "test-only": "ava",
    "test-watch": "ava -w"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "xo": {
    "space": true,
    "esnext": true,
    "rules": {
      "ava/no-only-test": 0,
      "capitalized-comments": 0
    }
  }
}
